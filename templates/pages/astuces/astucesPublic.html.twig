{% extends 'base.html.twig' %}

{% block title %}Maso-Numérique  -Astuces publics
{% endblock %}

{% block body %}
	<div
		class="container mt-4">
		
	
			<h1>
				Astuces publics</h1>

			{# vatiable pour indiquer le nombre d'astuce #}
			<div class="count mt-4">
				Il y a
				{{ astuces.getTotalItemCount }}
				astuces.
			</div>
			<div class="d-flex justify-content-around mt-5 flex-wrap">
				{% for astuce in astuces %}
					<div class="card border-info mb-3 mr-3" style="max-width: 20rem;">
						<div class="card-header">auteur
							{{astuce.auteur}}</div>
						<div class="card-body">
							<h4 class="card-title">{{astuce.title}}</h4>
                            {# limité le nb de caractères et mettre ... grace au filte slice #}
							<p class="card-text">{{astuce.content | slice (0, 100) ~ '...' }}</p>
							<h6 class="card-title">
								Edité le :
								{{astuce.createdAt|date('d/m/Y')}}</h6>
						</div>
					</div>
				{% endfor %}
			</div>
            <div class="navigation"></div>
            {# pagination #}
			<div class="navigation-info mt-4">
				{{ knp_pagination_render(astuces) }}
			</div>
		</div>
	{% endblock %}
